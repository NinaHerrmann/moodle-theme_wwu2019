{{!
    @template theme_wwu2019/menu

    Displays logo of WWU and Learnweb

    Example context (json):
    {
        "wwwroot": "https://www.example-moodle.de/",
        "logo": "https://www.example-moodle.de/theme/wwu2019/pix/logo.svg"
    }
}}
<div id="main-menu">
    <div class="pull-left">
        {{# mainmenu }}
        <div class="main-menu-item pull-left">
            <a>
                <span class="fa fa-{{icon}}"></span>
                <span>{{name}}</span>
            </a>
            <div class="sub-menu-wrapper">
                <div class="sub-menu">
                    {{# menu }}
                        <div class="sub-menu-item">
                            <a>
                                <span class="fa fa-{{icon}}"></span>
                                <span>{{ name }}</span>
                            </a>
                        </div>
                        {{# breaker }}
                            <div class="breaker {{ breaker }}"></div>
                        {{/ breaker }}
                    {{/ menu }}
                </div>
            </div>
        </div>
        {{/ mainmenu }}
    </div>
    <div class="pull-right"></div>
</div>