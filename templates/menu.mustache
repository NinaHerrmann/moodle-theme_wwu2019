{{!
    @template theme_wwu2019/menu

    Displays main menu.

    Example context (json):
    {
    }
}}
<div id="main-menu-placeholder">
    <nav id="main-menu">
        <div id="main-menu-border">
            <ul role="menubar" class="d-flex">
                {{# mainmenu }}
                    <li role="none" class="main-menu-item">
                        <a role="menuitem" tabindex="0"
                            {{# href }} href="{{ href }}"{{/href}}>
                            {{# pix }} {{ icon.key }}, {{ icon.component }}, {{ icon.title }} {{/ pix }}
                            <span class="underline">{{name}}</span>
                        </a>
                        {{# hasmenu }}
                            <div class="sub-menu-wrapper">
                                <ul role="menu" class="sub-menu">
                                    {{# menu }}
                                        <li role="none" class="sub-menu-item">
                                            <a role="menuitem" {{# href }} href="{{ href }}"{{/href}}>
                                                {{# pix }} {{ icon.key }}, {{ icon.component }}, {{ icon.title }} {{/ pix }}
                                                <span class="underline">{{ name }}</span>
                                                {{# hasmenu }}
                                                    <div class="arrow"></div>
                                                {{/ hasmenu }}
                                            </a>
                                            {{# hasmenu }}
                                                {{> theme_wwu2019/menu-recursion }}
                                            {{/hasmenu}}
                                        </li>
                                        {{# breaker }}
                                            <div class="breaker {{ . }}"></div>
                                            {{! Needed for ensuring last breaker also breaks there is no item follow the breaker (Occurs when menu has one or two items). }}
                                            <div></div>
                                        {{/ breaker }}
                                    {{/ menu }}
                                </ul>
                            </div>
                        {{/hasmenu}}
                    </li>
                {{/ mainmenu }}
            </ul>
        </div>
    </nav>
</div>